<div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
    <a href="/"
       class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
        <H1 class="fs-5 d-none d-sm-inline">{{ client.prenom |upper }}</H1>
    </a>
    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start"
        id="menu">
        <li class="nav-item">
            <a href="#" class="nav-link align-middle px-0">
                <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
            </a>
        </li>
        <li>
            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                <i class="fs-4 bi-speedometer2"></i> <span
                        class="ms-1 d-none d-sm-inline">Tableau de bord</span>
            </a>
            <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                <li class="w-100">
                    <a href="#" class="nav-link px-0"> <span
                                class="d-none d-sm-inline m-lg-3">     Indicateurs</span></a>
                </li>
                <li class="w-100">
                    <a href="{{ path('app_client_monprofile', {id: client.id}) }}" class=" nav-link px-0"> <span
                                class="d-none d-sm-inline m-lg-3">     Mon profile</span></a>
                </li>

            </ul>
        </li>
        <li>
            <a href="{{ path('app_client_show_documents', {id: client.id}) }}" class="nav-link px-0 align-middle">
                <i class="fs-4 bi-table"></i> <span
                        class="ms-1 d-none d-sm-inline {% if type == "document" %}active{% endif %}">Documents</span></a>
        </li>

        <li>
            <a href="#submenu3" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                <i class="fs-4 bi-grid"></i> <span
                        class="ms-1 d-none d-sm-inline {% if type == "projet" %}active{% endif %}">Projets</span> </a>
            <ul class="collapse nav flex-column ms-1" id="submenu3" data-bs-parent="#menu">
                <li class="w-100">
                    {% for projet in client.projets %}

                        <a href="{{ path('app_client_show_projet', {id: client.id, projet_id: projet.id}) }}"
                           class=" nav-link px-0"> <span
                                    class="d-none d-sm-inline">{{ projet.titre }}</span></a>
                    {% endfor %}
                </li>

            </ul>
        </li>

    </ul>
    <hr>
    <div class="dropdown pb-4">
        <a href="#"
           class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
           id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30"
                 class="rounded-circle">
            <span class="d-none d-sm-inline mx-1">loser</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow"
            aria-labelledby="dropdownUser1">
            <li><a class="dropdown-item" href="#">New project...</a></li>
            <li><a class="dropdown-item" href="#">Settings</a></li>
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li>
                <hr class="dropdown-divider">
            </li>
            <li><a class="dropdown-item" href="#">Sign out</a></li>
        </ul>
    </div>
</div>
<style>
    .active {
        background: yellow;
    }
</style>
