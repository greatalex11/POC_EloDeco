{% extends 'base.html.twig' %}

{% block title %}Profile client{% endblock %}


{% block body %}

    <div class="mt-4">

        <div class="mb-4">
            <p class="text-uppercase">Profile client !!!!! </p>

            <h1>{{ client|capitalize }}</h1>
        </div>
        {{ dump() }}

        <div class="dropdown-menu">
            <a class="dropdown-item" href="#">Tableau de bord !!!!</a>
            <a class="dropdown-item" href="#">Projet</a>
            <a class="dropdown-item" href="#">Votre profile</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Nous envoyer un mail</a>
        </div>


        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ client.dateNaissance ? client.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.user.adresse }}</td>
            </tr>
            <tr>
                <th>Code_postal</th>
                <td>{{ client.user.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.user.ville }}</td>
            </tr>

            </tbody>
        </table>

    </div>




    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>


{% endblock %}