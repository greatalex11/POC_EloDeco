{% extends 'base.html.twig' %}

{% block title %}Projet index{% endblock %}

{% block body %}
    <h1>Projet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Debut</th>
                <th>DateFin</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.titre }}</td>
                <td>{{ projet.Debut ? projet.Debut|date('Y-m-d') : '' }}</td>
                <td>{{ projet.dateFin ? projet.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ projet.description }}</td>
                <td>
                    <a href="{{ path('app_projet_crud_show', {'id': projet.id}) }}">show</a>
                    <a href="{{ path('app_projet_crud_edit', {'id': projet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projet_crud_new') }}">Create new</a>
{% endblock %}
